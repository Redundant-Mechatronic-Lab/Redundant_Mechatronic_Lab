source "https://rubygems.org"
ruby RUBY_VERSION

# Jekyll version for GitHub Pages
gem "jekyll", "~> 4.2"

# Add essential dependencies
gem "ffi", "~> 1.15"
gem "sass-embedded", "< 1.83"
gem "jekyll-sitemap"
gem "jekyll-feed", "~> 0.6"
gem "jekyll-paginate" # Fix pagination warning
gem "liquid", "~> 4.0"

# Plugins
group :jekyll_plugins do
   gem "jekyll-seo-tag"  # Recommended for SEO
   gem "jekyll-redirect-from"  # Useful for page redirects
end

